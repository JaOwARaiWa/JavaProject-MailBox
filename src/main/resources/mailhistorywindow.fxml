        </columns>
      </TableView>
      <Label layoutX="22.0" layoutY="335.0" prefHeight="30.0" prefWidth="350.0" text="Double click on the mail to see more detail">
         <font>
            <Font name="Arial Rounded MT Bold" size="15.0" />
         </font>
      </Label>
      <Accordion />
   </children>
</AnchorPane>
